{% extends 'base.html.twig' %}

{% block title %}Catégories - Koteban{% endblock %}

{% block body %}
    <!-- Inclure le header -->

    <div class="d2c_wrapper">
        <!-- Bouton pour toggler la sidebar en mode mobile -->
        <button class="d2c_offcanvas_toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#d2c_sidebar" aria-controls="d2c_sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Inclure la sidebar -->
        {% include 'partials/sidebar.html.twig' %}

        <!-- Main Content -->
        <div class="d2c_main p-4 ps-lg-3">
            <!-- Title -->
            <h4 class="mb-4 text-capitalize">Catégories</h4>

            <!-- Category List -->
            <div class="card d2c_projects_datatable">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6>Liste des catégories</h6>
                    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Ajouter une catégorie
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <form method="get" action="{{ path('app_admin_category_index') }}" class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="search" class="form-control" placeholder="Rechercher une catégorie..." value="{{ app.request.query.get('search')|default('') }}">
                            <button type="submit" class="btn btn-outline-primary">Rechercher</button>
                            <a href="{{ path('app_admin_category_index') }}" class="btn btn-outline-secondary">Réinitialiser</a>
                        </div>
                    </form>

                    <!-- Category Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="d2c_advanced_table">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Parent</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if categories is defined and categories|length > 0 %}
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ category.name|default('N/A') }}</td>
                                            <td>{{ category.parent ? category.parent.name|default('Aucune') : 'Aucune' }}</td>
                                            <td>
                                                <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning me-1" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ category.id }}" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <!-- Modal de confirmation -->
                                                <div class="modal fade" id="deleteModal{{ category.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ category.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteModalLabel{{ category.id }}">Confirmer la suppression</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Êtes-vous sûr de vouloir supprimer la catégorie "{{ category.name|default('N/A') }}" ?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                <form method="post" action="{{ path('app_admin_category_delete', {'id': category.id}) }}" style="display:inline;">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center">Aucune catégorie trouvée</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inclure le footer -->
    {% include 'partials/footer.html.twig' %}
{% endblock %}