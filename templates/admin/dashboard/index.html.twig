{% extends 'base.html.twig' %}
     {% block title %}Dashboard{% endblock %}
     {% block content %}
         <!-- Title -->
         <h4 class="mb-4 text-capitalize">Dashboard</h4>
         <div class="row d2c_home_card">
             <div class="col-xxl-9">
                 <div class="row">
                     <!-- Commande -->
                     <div class="col-xl-3 col-md-6 mb-4">
                         <div class="card">
                             <div class="card-body text-center">
                                 <div class="btn rounded shadow text-primary">
                                     <i class="fas fa-shopping-cart"></i>
                                 </div>
                                 <h6 class="mt-3">Commande</h6>
                                 <p>Total commandes</p>
                                 <h4 class="text-primary mb-0">125</h4>
                             </div>
                         </div>
                     </div>
                     <!-- Vente -->
                     <div class="col-xl-3 col-md-6 mb-4">
                         <div class="card">
                             <div class="card-body text-center">
                                 <div class="btn rounded shadow text-success">
                                     <i class="fas fa-cash-register"></i>
                                 </div>
                                 <h6 class="mt-3">Vente</h6>
                                 <p>Total ventes</p>
                                 <h4 class="text-success mb-0">$18,760</h4>
                             </div>
                         </div>
                     </div>
                     <!-- Profil -->
                     <div class="col-xl-3 col-md-6 mb-4">
                         <div class="card">
                             <div class="card-body text-center">
                                 <div class="btn rounded shadow text-warning">
                                     <i class="fas fa-user"></i>
                                 </div>
                                 <h6 class="mt-3">Profil</h6>
                                 <p>Utilisateurs actifs</p>
                                 <h4 class="text-warning mb-0">320</h4>
                             </div>
                         </div>
                     </div>
                     <!-- Revenu -->
                     <div class="col-xl-3 col-md-6 mb-4">
                         <div class="card">
                             <div class="card-body text-center">
                                 <div class="btn rounded shadow text-danger">
                                     <i class="fas fa-money-bill-wave"></i>
                                 </div>
                                 <h6 class="mt-3">Revenu</h6>
                                 <p>Revenu total</p>
                                 <h4 class="text-danger mb-0">$45,230</h4>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
         <div class="row">
             <div class="col-md-12 mb-4">
                 <div class="card h-auto d2c_projects_datatable">
                     <div class="card-header">
                         <h6>Advance Table</h6>
                     </div>
                     <div class="card-body">
                         <div class="table-responsive">
                             <table class="table" id="d2c_advanced_table">
                                 <thead>
                                     <tr>
                                         <th style="min-width: 170px;">Date</th>
                                         <th style="min-width: 170px;">Customer</th>
                                         <th style="min-width: 130px;">Group Name</th>
                                         <th style="min-width: 130px;">Voucher</th>
                                         <th style="min-width: 130px;">Payment Type</th>
                                         <th style="min-width: 130px;">Amount</th>
                                     </tr>
                                 </thead>
                                 <tbody>
                                     <tr>
                                         <td>
                                             <div class="form-check">
                                                 <input class="form-check-input" type="checkbox">
                                                 <label class="form-check-label">12 Aug 2023</label>
                                             </div>
                                         </td>
                                         <td>Robert Mon</td>
                                         <td>Customer</td>
                                         <td>67755</td>
                                         <td class="text-success">Delivered</td>
                                         <td>$6,546.32</td>
                                     </tr>
                                     <!-- Autres lignes du tableau -->
                                 </tbody>
                             </table>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     {% endblock %}