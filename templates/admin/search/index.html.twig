{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Recherche</h1>
        <form method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Rechercher un produit..." value="{{ app.request.query.get('q') }}">
                <select name="category" class="form-select">
                    <option value="">Toutes catégories</option>
                    {# Remplir avec les catégories dynamiquement #}
                </select>
                <button type="submit" class="btn btn-outline-secondary">Rechercher</button>
            </div>
        </form>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th>Prix de vente</th>
                </tr>
            </thead>
            <tbody>
                {% for product in pagination %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.category ? product.category.name : 'Aucune' }}</td>
                        <td>{{ product.priceSell }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun produit trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}