{% extends 'base.html.twig' %}

{% block title %}Produits - Koteban{% endblock %}

{% block body %}
    <!-- Inclure le header -->

    <div class="d2c_wrapper">
        <!-- Bouton pour toggler la sidebar en mode mobile -->
        <button class="d2c_offcanvas_toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#d2c_sidebar" aria-controls="d2c_sidebar">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Inclure la sidebar -->
        {% include 'partials/sidebar.html.twig' %}

        <!-- Main Content -->
        <div class="d2c_main p-4 ps-lg-3">
            <!-- Title -->
            <h4 class="mb-4 text-capitalize">Produits</h4>

            <!-- Product List -->
            <div class="card d2c_projects_datatable">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6>Liste des produits</h6>
                    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Ajouter un produit
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search Form -->
                    <form method="get" action="{{ path('app_admin_product_index') }}" class="mb-4">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="search" class="form-control" placeholder="Rechercher un produit..." value="{{ app.request.query.get('search')|default('') }}">
                            <button type="submit" class="btn btn-outline-primary">Rechercher</button>
                            <a href="{{ path('app_admin_product_index') }}" class="btn btn-outline-secondary">Réinitialiser</a>
                        </div>
                    </form>

                    <!-- Product Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="d2c_advanced_table">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Catégorie</th>
                                    <th>Prix d'achat</th>
                                    <th>Prix de vente</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if products is defined and products|length > 0 %}
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.name|default('N/A') }}</td>
                                            <td>{{ product.category ? product.category.name|default('Aucune') : 'Aucune' }}</td>
                                            <td>{{ product.purchasePrice|default(0)|number_format(2, ',', ' ') }} €</td>
                                            <td>{{ product.price|default(0)|number_format(2, ',', ' ') }} €</td>
                                            <td>
                                                <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning me-1" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ product.id }}" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <!-- Modal de confirmation -->
                                                <div class="modal fade" id="deleteModal{{ product.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ product.id }}" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteModalLabel{{ product.id }}">Confirmer la suppression</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Êtes-vous sûr de vouloir supprimer le produit "{{ product.name|default('N/A') }}" ?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                                <form method="post" action="{{ path('app_admin_product_delete', {'id': product.id}) }}" style="display:inline;">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Aucun produit trouvé</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="navigation mt-3 d-flex justify-content-center">
                        {{ knp_pagination_render(products) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inclure le footer -->
    {% include 'partials/footer.html.twig' %}
{% endblock %}