{% extends 'base.html.twig' %}

{% block title %}Liste des Fournisseurs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Fournisseurs</h1>
        <a href="{{ path('app_admin_supplier_new') }}" class="btn btn-primary mb-3">Ajouter un fournisseur</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for supplier in suppliers %}
                    <tr>
                        <td>{{ supplier.name }}</td>
                        <td>{{ supplier.phone ?: 'N/A' }}</td>
                        <td>{{ supplier.address ?: 'N/A' }}</td>
                        <td>
                            <a href="{{ path('app_admin_supplier_edit', {'id': supplier.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                            <a href="{{ path('app_admin_supplier_history', {'id': supplier.id}) }}" class="btn btn-sm btn-info">Historique</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun fournisseur trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}