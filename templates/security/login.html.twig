<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ asset('assets/images/logo/koteban.PNG') }}" type="image/gif" sizes="16x16">
    <title>Connexion</title>
    <meta name="robots" content="index, follow">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="{{ asset('lib/bootstrap_5/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('lib/fontawesome/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/global.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/responsive.css') }}">
</head>

<body class="d2c_theme_light">
    <div class="preloader">
        <img src="{{ asset('assets/images/logo/koteban.PNG') }}" alt="Logo" width="50">
    </div>

    <section class="d2c_login_system d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xxl-4 offset-xxl-4">
                    <div class="d2c_login_wrapper">
                        <div class="text-center mb-4">
                            <h4 class="text-capitalize">Bienvenue chez Koteban</h4>
                            <p class="text-muted">Pas encore de compte ? 
                                <a href="{{ path('app_user_register') }}" class="text-capitalize text-primary text-decoration-none d2c_link">
                                    Inscrivez-vous ici
                                </a>
                            </p>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post" class="form-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Votre Email</label>
                                <input type="email" name="_username" class="form-control" placeholder="Entrez votre email" required value="{{ last_username }}">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Mot de passe</label>
                                <div class="input-group">
                                    <input type="password" name="_password" class="form-control border-end-0" placeholder="Entrez votre mot de passe" aria-describedby="button-addon2" required>
                                    <button class="btn ps-0 border-start-0 m-0" type="button" id="button-addon2"><i class="far fa-eye-slash"></i></button>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="row mb-3">
                                <div class="col">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                                        <label class="form-check-label text-muted" for="remember_me">Se souvenir de moi</label>
                                    </div>
                                </div>
                                <div class="col text-end ps-0">
                                    <a href="#" class="d2c_link text-primary text-capitalize">Mot de passe oubli√© ?</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100 text-capitalize">Se connecter</button>
                            </div>
                        </form>

                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="{{ asset('lib/jQuery/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ asset('lib/bootstrap_5/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>
</body>
</html>
